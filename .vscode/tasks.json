{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Go",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-gcflags='all=-l -N'",
                // "-gcflags='-m'",
                // "-ldflags='-s -w'",
                "-ldflags='-w'",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "${file}"
            ]
        }
    ]
}